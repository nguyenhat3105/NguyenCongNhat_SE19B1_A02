<Window x:Class="FUMiniHotelManagement.Views.AddRoomDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm phòng mới"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Background="#FAFAFA">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Nhập thông tin phòng mới"
                   FontSize="18" FontWeight="Bold"
                   Foreground="#FF8C00"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15"/>

        <StackPanel Grid.Row="1" Margin="0,10,0,10">
            <TextBlock Text="Số phòng:"/>
            <TextBox x:Name="txtRoomNumber" Margin="0,3,0,8"/>

            <TextBlock Text="Mô tả:"/>
            <TextBox x:Name="txtDescription" Margin="0,3,0,8"/>

            <TextBlock Text="Sức chứa tối đa:"/>
            <TextBox x:Name="txtCapacity" Margin="0,3,0,8"/>

            <TextBlock Text="Giá / ngày:"/>
            <TextBox x:Name="txtPrice" Margin="0,3,0,8"/>

            <TextBlock Text="Trạng thái:"/>
            <ComboBox x:Name="cbStatus" Margin="0,3,0,8">
                <ComboBoxItem Content="Available"/>
                <ComboBoxItem Content="Occupied"/>
                <ComboBoxItem Content="Maintenance"/>
            </ComboBox>

            <TextBlock Text="Loại phòng:"/>
            <ComboBox x:Name="cbRoomType" DisplayMemberPath="RoomTypeName" Margin="0,3,0,8"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Lưu" Width="80" Margin="5" Background="#FF8C00" Foreground="White"
                    Click="Save_Click"/>
            <Button Content="Hủy" Width="80" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>

<UserControl x:Class="FUMiniHotelManagement.Views.RoomView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="#FAFAFA">

    <UserControl.Resources>
        <!-- 🎨 Nút màu cam -->
        <Style x:Key="OrangeButton" TargetType="Button">
            <Setter Property="Background" Value="#FF8C00"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="#FF8C00"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFA733"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF7800"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 🔸 Header -->
        <TextBlock Text="QUẢN LÝ PHÒNG"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="#FF8C00"
                   Margin="0,0,0,15"
                   HorizontalAlignment="Left"/>

        <!-- 🔸 DataGrid hiển thị danh sách phòng -->
        <Border Grid.Row="1"
        Background="White"
        BorderBrush="#DDD"
        BorderThickness="1"
        Padding="10"
        Margin="0,10,0,10">

            <DataGrid ItemsSource="{Binding Rooms}"
              SelectedItem="{Binding SelectedRoom, Mode=TwoWay}"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              Background="White"
              Foreground="Black"
              AlternatingRowBackground="#FFF3E0"
              HeadersVisibility="Column"
              BorderThickness="0"
              RowHeight="28">

                <!-- 🔹 Style căn giữa -->
                <DataGrid.Resources>
                    <!-- Căn giữa nội dung các ô -->
                    <Style x:Key="CenterCellStyle" TargetType="TextBlock">
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="TextAlignment" Value="Center"/>
                    </Style>

                    <!-- Căn giữa tiêu đề cột -->
                    <Style x:Key="CenterHeaderStyle" TargetType="DataGridColumnHeader">
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.Resources>

                <!-- 🔸 Header style -->
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource CenterHeaderStyle}">
                        <Setter Property="Background" Value="#FFB74D"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Height" Value="30"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <!-- 🔸 Cấu hình các cột -->
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID"
                                Binding="{Binding RoomId}"
                                Width="50"
                                ElementStyle="{StaticResource CenterCellStyle}"/>

                    <DataGridTextColumn Header="Số phòng"
                                Binding="{Binding RoomNumber}"
                                Width="120"
                                ElementStyle="{StaticResource CenterCellStyle}"/>

                    <DataGridTextColumn Header="Mô tả"
                                Binding="{Binding RoomDetailDescription}"
                                Width="200"
                                />

                    <DataGridTextColumn Header="Sức chứa tối đa"
                                Binding="{Binding RoomMaxCapacity}"
                                Width="100"
                                ElementStyle="{StaticResource CenterCellStyle}"/>

                    <DataGridTextColumn Header="Loại phòng"
                                Binding="{Binding RoomType.RoomTypeName}"
                                Width="120"
                                ElementStyle="{StaticResource CenterCellStyle}"/>

                    <DataGridTextColumn Header="Trạng thái"
                                Binding="{Binding RoomStatus}"
                                Width="100"
                                ElementStyle="{StaticResource CenterCellStyle}"/>

                    <DataGridTextColumn Header="Giá/ngày"
                                Binding="{Binding RoomPricePerDay}"
                                Width="100"
                                ElementStyle="{StaticResource CenterCellStyle}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>


        <!-- 🔸 Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">
            <Button Content="Tạo mới" Width="100" Height="36"
                    Command="{Binding AddCommand}"
                    Style="{StaticResource OrangeButton}" />

            <Button Content="Cập nhật" Width="100" Height="36"
                    Command="{Binding UpdateCommand}"
                    Style="{StaticResource OrangeButton}" />

            <Button Content="Lưu" Width="100" Height="36"
                    Command="{Binding SaveCommand}"
                    Style="{StaticResource OrangeButton}" />

            <Button Content="Xóa" Width="100" Height="36"
                    Command="{Binding DeleteCommand}"
                    Style="{StaticResource OrangeButton}" />

            <Button Content="Tải lại" Width="100" Height="36"
                    Command="{Binding RefreshCommand}"
                    Style="{StaticResource OrangeButton}" />
        </StackPanel>

    </Grid>
</UserControl>

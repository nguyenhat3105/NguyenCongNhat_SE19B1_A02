<UserControl x:Class="FUMiniHotelManagement.Views.CustomerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto" MinHeight="23.96"/>
        </Grid.RowDefinitions>

        <!-- Danh sách khách hàng -->
        <DataGrid Grid.Row="0"
                  ItemsSource="{Binding Customers}"
                  SelectedItem="{Binding SelectedCustomer}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="False" Margin="0,0,0,24" Grid.RowSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding CustomerId}" Width="60"/>
                <DataGridTextColumn Header="Họ tên" Binding="{Binding CustomerFullName}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding EmailAddress}" Width="220"/>
                <DataGridTextColumn Header="Điện thoại" Binding="{Binding Telephone}" Width="120"/>
                <DataGridTextColumn Header="Ngày sinh" Binding="{Binding CustomerBirthday, StringFormat=\{0:yyyy-MM-dd\}}" Width="120"/>
                <DataGridTextColumn Header="Trạng thái" Binding="{Binding CustomerStatus}" Width="80"/>
                <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Footer -->
        <TextBlock Grid.Row="1"
                   HorizontalAlignment="Left"
                   Margin="4,8,0,0"
                   Text="{Binding Customers.Count, StringFormat=Tổng khách hàng: {0}}" Width="0"/>
    </Grid>
</UserControl>

<Window x:Class="FUMiniHotelManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:FUMiniHotelManagement.ViewModel"
        xmlns:v="clr-namespace:FUMiniHotelManagement.Views"
        Title="Quản lý khách sạn mini"
        WindowStartupLocation="CenterScreen"
        Width="1200" Height="700"
        MinWidth="1000" MinHeight="600"
        Background="White">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:CustomerViewModel}">
            <v:CustomerView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:RoomViewModel}">
            <v:RoomView />
        </DataTemplate>
    </Window.Resources>

    <DockPanel>
        <!-- Thanh menu trái -->
        <StackPanel DockPanel.Dock="Left" Width="180" Background="#F0F0F0" Margin="10">
            <TextBlock Text="BẢNG ĐIỀU KHIỂN" FontWeight="Bold" Margin="10"/>
            <Button x:Name="btnKhachHang" Content="Khách hàng" Command="{Binding ShowCustomerViewCommand}" Margin="10"/>
            <Button x:Name="btnPhong" Content="Phòng" Command="{Binding ShowRoomViewCommand}" Margin="10"/>
        </StackPanel>

        <!-- Khu vực hiển thị nội dung động -->
        <Border Background="White" Padding="10" Margin="10">
            <ContentControl x:Name="MainContent"
                            Content="{Binding CurrentView}"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"/>
        </Border>
    </DockPanel>
</Window>

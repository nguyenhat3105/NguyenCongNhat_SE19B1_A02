<Window x:Class="FUMiniHotelManagement.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:helpers="clr-namespace:FUMiniHotelManagement.Helper"
        mc:Ignorable="d"
        Title="Đăng nhập hệ thống" 
        Height="480" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Orange"
        FontFamily="Segoe UI">

    <Window.Resources>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <SolidColorBrush x:Key="PrimaryBrush" Color="#FF7F3F"/>
        <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#FF9A5A"/>
        <SolidColorBrush x:Key="PrimaryPressedBrush" Color="#E56A2F"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#222222"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#666666"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#DDDDDD"/>
        <SolidColorBrush x:Key="BorderFocusedBrush" Color="#FF7F3F"/>

        <Style x:Key="InputControlBaseStyle" TargetType="Control">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Control">
                        <Border x:Name="border" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                Background="{TemplateBinding Background}" 
                                SnapsToDevicePixels="True"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource BorderFocusedBrush}"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource BorderFocusedBrush}"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="6" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox" BasedOn="{StaticResource InputControlBaseStyle}"/>

        <Style TargetType="PasswordBox" BasedOn="{StaticResource InputControlBaseStyle}"/>

        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryPressedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PlaceholderTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="Margin" Value="12,8,0,0"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Border Background="White"
            CornerRadius="12"
            Padding="35"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Width="360">
        <Border.Effect>
            <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="3" BlurRadius="15" Opacity="0.1"/>
        </Border.Effect>

        <StackPanel>
            <StackPanel HorizontalAlignment="Center" Margin="0,0,0,25">
                <Path Data="M12 5.69l5 4.5V18h-2v-6H9v6H7v-7.81l5-4.5M12 3L2 12h3v8h6v-6h2v6h6v-8h3L12 3z" Fill="{StaticResource PrimaryBrush}" Stretch="Uniform" Width="36" Height="36"/>
                <TextBlock Text="MiniHotel"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,5"/>
                <TextBlock Text="Đăng nhập hệ thống quản lý"
                           FontSize="14"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Email" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,6"/>
                <Grid>
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Name="EmailBox"/>
                    <TextBlock Text="Nhập email của bạn" Style="{StaticResource PlaceholderTextStyle}"
                               Visibility="{Binding Text, ElementName=EmailBox, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </Grid>

                <TextBlock Text="Mật khẩu" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,15,0,6"/>
                <PasswordBox x:Name="PasswordBox"/>

                <Button Content="Đăng nhập"
                        Height="25"
                        Command="{Binding LoginCommand}"
                        Margin="0,25,0,0"/>

                <ProgressBar Height="5"
                             Margin="0,15,0,0"
                             IsIndeterminate="True"
                             Foreground="{StaticResource PrimaryBrush}"
                             Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"
                             Background="Transparent"/>
            </StackPanel>

            <TextBlock Text="© 2025 MiniHotel Management"
                       Foreground="#BBBBBB"
                       FontSize="11"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       Margin="0,30,0,0"/>
        </StackPanel>
    </Border>
</Window>
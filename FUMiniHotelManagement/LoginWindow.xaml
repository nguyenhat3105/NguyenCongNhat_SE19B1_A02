<Window x:Class="FUMiniHotelManagement.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodel="clr-namespace:FUMiniHotelManagement.ViewModel"
        xmlns:helpers="clr-namespace:FUMiniHotelManagement.Helper"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewmodel:LoginViewModel, IsDesignTimeCreatable=False}"
        Title="Đăng nhập" Height="220" Width="350" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Nếu bạn đã khai báo converter trong App.xaml thì không cần dòng này -->
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>

    <Grid Margin="16">
        <StackPanel>
            <TextBlock Text="Email:" Margin="0,0,0,4"/>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Mật khẩu:" Margin="0,8,0,4"/>
            <PasswordBox x:Name="PasswordBox" />

            <Button Content="Đăng nhập"
                    Command="{Binding LoginCommand}"
                    Width="100" Margin="0,12,0,0"/>

            <ProgressBar Height="16" IsIndeterminate="True"
                         Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"
                         Margin="0,8,0,0"/>
        </StackPanel>
    </Grid>
</Window>

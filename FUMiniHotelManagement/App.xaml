<Application x:Class="FUMiniHotelManagement.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:FUMiniHotelManagement.Helper"
             xmlns:vm="clr-namespace:FUMiniHotelManagement.ViewModel"
             xmlns:v="clr-namespace:FUMiniHotelManagement.Views"

             StartupUri="LoginWindow.xaml">
    <Application.Resources>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <DataTemplate DataType="{x:Type vm:CustomerViewModel}">
            <v:CustomerView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:RoomViewModel}">
            <v:RoomView />
        </DataTemplate>
    </Application.Resources>
    
</Application>
